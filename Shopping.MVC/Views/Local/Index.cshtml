@model IEnumerable<Shopping.Core.Local>
@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registro Local - Sucursal </title>
</head>
<body>
    <h4> Creacion de Local </h4>

    <a asp-action="DarAltaLocal"> Ingrese aqui los datos para crear el local</a><br />
    <table>
        <thead>
            <tr>
                <td> Nombre</td>
                <td> Direccion</td>
                <td> Cantidad Maxima</td>
            </tr>
        </thead>
            <tbody>
                @foreach (Shopping.Core.Local local in Model)
                {
                    <tr>
                        <td><a asp-controller="Local" asp-action="Detalle" asp-route-id="@local.Sucursal"> @local.Nombre</a></td>
                        <td><a asp-controller="Local" asp-action="Detalle" asp-route-id="@local.Sucursal"> @local.Direccion</a></td>
                        <td><a asp-controller="Local" asp_action="Detalle" asp-route-id="@local.Sucursal"> @local.CantMax</a></td>
                    </tr>
                }
            </tbody>
    </table>
</body>
</html>