@model Shopping.Core.Local
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Local - Detalle</title>
</head>
<body>
    <div> 
        <h3> Nombre: @Model.Nombre </h3>    
    </div>
    <hr>
    <table>
        <thead>
            <td> Direccion</td> 
            <td> Cantidad Maxima </td> 
            <td> Persona A Cargo </td> 
            <tbody>
               
            @foreach (Shopping.Core.Persona persona in Model.personas)
            {
                <tr>
                    <td>@persona.Nombre</td>
                </tr>
            }
        </tbody>
        </thead>
    </table>
    <hr/>
    <a asp-controller="Persona" asp-action="Index"> Agregar Persona</a>
    <a asp-action="Index" > Volver a inicio</a>
</body>
</html>