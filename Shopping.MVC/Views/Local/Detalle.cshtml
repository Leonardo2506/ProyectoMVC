@model Shopping.Core.Local;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Local - Detalle</title>
</head>
<body>
    <div> 
        <h3> Nombre: @Model.Nombre </h3>    
