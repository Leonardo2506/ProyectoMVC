@model IEnumerable<Shopping.Core.Persona>
@{
    Layout = "_Layout3";
}


<div>
    <h4 class="nivel2"> Persona a Cargo </h4>
</div>


<div class="nivel2a">
    <a asp-action="DarAltaPersona"> Ingrese aqui a una persona a Cargo</a><br />
    @foreach (Shopping.Core.Persona persona in Model)
    {
        <ul>
            <li class="nivel2b"><a asp-controller="Persona" asp-action="Detalle" asp-route-id="@persona.Id">@persona.Apellido,
                    @persona.Nombre</a></li>
        </ul>
    }
</div>
